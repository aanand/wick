#!/usr/bin/env ruby

require 'irc_client'

host = ARGV[0] || 'localhost'
port = ARGV[1] || '6667'

output  = IRCClient::Output::Basic.new
runner  = IRCClient::Runner::Socket.new(host, port, $stdin, $stdout)
session = IRCClient.init_session

output.attach(session)
runner.attach(session)

runner.listen!